[init]
	templatedir = ~/.dotfiles/git/git_template
[alias]
	ctags = !.git/hooks/ctags
	sla = log --oneline --decorate --graph --all
	glog = log -E -i --grep
	car = commit --amend --no-edit
	df = diff --word-diff --color-words
	co = checkout
