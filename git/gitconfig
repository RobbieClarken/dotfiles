[user]
	name = RobbieClarken
	email = robbie.clarken@gmail.com
[color]
	ui = true
[core]
	excludesfile = ~/.dotfiles/git/gitignore_global
[alias]
	i = !git init && git commit --allow-empty -m 'Initialise repository'
	l = log --oneline --decorate --all --graph
	sla = log --oneline --decorate --graph --all
	glog = log -E -i --grep
	df = diff --word-diff --color-words
	dfc = diff --word-diff --color-words --cached
	co = checkout
	cm = commit -v
	cma = commit -v --amend
	pf = push --force-with-lease
	dc = diff --word-diff --color-words --cached
	sml = submodule foreach git log --oneline --decorate --graph -n 1
	cmm = !git cm -a
	cmam = !git cma -a
	cmi = commit -m 'Initial commit'
[pull]
	rebase = true
[fetch]
	prune = true
[merge]
	ff = only
[push]
	default = simple
