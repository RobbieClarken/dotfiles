[alias]
	ctags = !.git/hooks/ctags
	sla = log --oneline --decorate --graph --all -n 38
	glog = log -E -i --grep
	df = diff --word-diff --color-words
	co = checkout
	cm = commit -v
	cma = commit -v --amend
[pull]
	rebase = true
[fetch]
	prune = true
[merge]
	ff = only
[push]
	default = simple
