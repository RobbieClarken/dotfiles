[user]
	name = RobbieClarken
	email = robbie.clarken@gmail.com
[color]
	ui = true
[core]
	excludesfile = ~/.dotfiles/git/gitignore_global
[alias]
	l = log --oneline --decorate --all --graph
	lg = log --graph --abbrev-commit --decorate --date=short --format=format:'%C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all --date-order
	lgl = log --abbrev-commit --decorate --date=short --format=format:'%C(bold cyan)%ad%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --date-order
	ll = log --oneline --decorate --graph
	df = diff --word-diff --color-words
	dfc = diff --word-diff --color-words --cached
	co = checkout
	cm = commit -v
	cma = commit -v --amend
	ph = push -u origin HEAD
	pf = push --force-with-lease
	sml = submodule foreach git log --oneline --decorate --graph -n 1
	cmi = commit -m 'Initial commit'
[pull]
	rebase = true
[fetch]
	prune = true
[merge]
	ff = only
[push]
	default = simple
